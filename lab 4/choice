import find_num
import blackjack
import tic_tac_toe  # импортируем модуль крестиков-ноликов

def main():
    print("Игры")
    print('1. Угадай число')
    print('2. Блэк_Джэк')
    print('3. Крестики-нолики')  # добавляем пункт меню
    print('0. Выход')

    Выбор = input("Выбери игру: ")
    if Выбор == "1":
        find_num.играть()
    elif Выбор == "2":
        blackjack.играть()
    elif Выбор == "3":
        tic_tac_toe.играть()  # запускаем игру крестики-нолики
    elif Выбор == "0":
        print("Выход")
    else:
        print('Неверный ввод')

if __name__ == "__main__":
    main()
